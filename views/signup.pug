extends layout 

block content
  h1 Sign Up 
  form(method='POST')
    div.form-group
      label(for='first_name') First Name
      input#first_name.form-control(type='text' placeholder='Enter your first name here' name='first_name' required value=(user && user.first_name ? user.first_name : ''))
      label(for='last_name') Last Name
      input#last_name.form-control(type='text' placeholder='Enter your last name here' name='last_name' required value=(user && user.last_name ? user.last_name : ''))
      label(for='username') Username
      input#username.form-control(type='text' placeholder='Enter your username here' name='username' required value=(user && user.username ? user.username : ''))
      label(for='password') Password
      input#password.form-control(type='password' placeholder='Enter your password here' name='password' required)
      label(for='confirmpassword') Confirm Password 
      input#confirmpassword.form-control(type='password', placeholder='Confirm your password' name='confirmpassword' required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg