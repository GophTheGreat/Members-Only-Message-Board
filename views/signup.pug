extends layout 

  h1 Sign Up 
  form(method='POST')
    div.form-group
      label(for='firstname') First Name
      input#firstname.form-control(type='text', placeholder='Enter your first name here' name='firstname' required)
      label(for='lastname') Last Name
      input#lastname.form-control(type='text', placeholder='Enter your last name here' name='lastname' required)
      label(for='username') Username
      input#username.form-control(type='text', placeholder='Enter your username here' name='username' required)
    button.btn.btn-primary(type='submit') Submit