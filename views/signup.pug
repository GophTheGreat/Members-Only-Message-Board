extends layout 

block content
  h1 Sign Up 
  form(method='POST')
    div.form-group
      label(for='first_name') First Name
      input#first_name.form-control(type='text', placeholder='Enter your first name here' name='first_name' required value=(first_name === undefined ? '' : user.first_name))
      label(for='last_name') Last Name
      input#last_name.form-control(type='text', placeholder='Enter your last name here' name='last_name' required value=(last_name === undefined ? '' : user.last_name))
      label(for='username') Username
      input#username.form-control(type='text', placeholder='Enter your username here' name='username' required value=(username === undefined ? '' : user.username))
      label(for='password') Password
      input#password.form-control(type='password', placeholder='Enter your password here' name='password' required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg